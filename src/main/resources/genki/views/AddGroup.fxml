<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx"
      spacing="15" alignment="TOP_CENTER"
      prefWidth="450" prefHeight="600"
      minWidth="50" minHeight="50"
      style="-fx-background-color: #f5f7fa; -fx-background-radius: 12;"
      fx:controller="genki.controllers.AddGroupController">

    <padding>
        <Insets top="13" right="30" bottom="25" left="30"/>
    </padding>

    <!-- Header -->
    <!--<HBox alignment="CENTER" spacing="10">
        <Label text="ðŸ‘¥" style="-fx-font-size: 28;"/>
        <Label text="Add New Group" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>-->
    
    <!--<Separator prefWidth="390" style="-fx-background-color: #e0e0e0;">
        <VBox.margin>
            <Insets top="5" bottom="10"/>
        </VBox.margin>
    </Separator> -->

    <!-- Form Container -->
    <VBox spacing="2" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets top="15" right="25" bottom="15" left="25"/>
        </padding>

        <!-- Group Name Field -->
        <VBox spacing="4">
            <Label text="Group Name *" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextField fx:id="txtGroupName" 
                       promptText="Enter group name" 
                       prefHeight="40"
                       style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 10;"/>
        </VBox>

        <!-- Description Field -->
        <VBox spacing="6">
            <Label text="Description *" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <TextArea fx:id="txtDescription" 
                      promptText="Enter group description" 
                      prefHeight="80"
                      wrapText="true"
                      style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 10;"/>
        </VBox>

        <!-- Group Type -->
        <VBox spacing="6">
            <Label text="Group Type *" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <ComboBox fx:id="cmbGroupType" 
                      promptText="Select group type" 
                      prefWidth="360"
                      prefHeight="40"
                      style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-font-size: 14;">
            </ComboBox>
        </VBox>

        <!-- Category -->
        <VBox spacing="5">
            <Label text="Category" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <ComboBox fx:id="cmbCategory" 
                      promptText="Select category" 
                      prefWidth="360"
                      prefHeight="40"
                      style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-font-size: 14;">
            </ComboBox>
        </VBox>

        <!-- Maximum Members -->
        <!--<VBox spacing="8">
            <Label text="Maximum Members" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Spinner fx:id="spnMaxMembers" 
                         prefWidth="120"
                         prefHeight="40"
                         editable="true"
                         style="-fx-background-radius: 8; -fx-border-color: #dce1e8; -fx-border-radius: 8;"/>
                <Label text="(0 = unlimited)" style="-fx-font-size: 11; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>
            </HBox>
        </VBox>-->

        <!-- Privacy Settings -->
        <VBox spacing="4">
            <Label text="Privacy Settings" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <HBox spacing="20">
                <RadioButton fx:id="rbPublic" 
                             text="Public" 
                             selected="true"
                             style="-fx-font-size: 13;"/>
                <RadioButton fx:id="rbPrivate" 
                             text="Private" 
                             style="-fx-font-size: 13;"/>
            </HBox>
        </VBox>

        <!-- Permissions -->
        <VBox spacing="4">
            <Label text="Permissions" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
                <CheckBox fx:id="chkCanPost" 
                          text="Members can post content" 
                          selected="true"
                          style="-fx-font-size: 12;"/>
                <CheckBox fx:id="chkCanInvite" 
                          text="Members can invite others" 
                          style="-fx-font-size: 12;"/>
                <CheckBox fx:id="chkCanEdit" 
                          text="Members can edit group info" 
                          style="-fx-font-size: 12;"/>
            </VBox>
        </VBox>

        <!-- Active Status 
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Active Status:" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <CheckBox fx:id="chkActive" 
                      selected="true" 
                      text="Active"
                      style="-fx-font-size: 13; -fx-text-fill: #27ae60;"/>
        </HBox> -->

    </VBox>

    <!-- Required Fields Note -->
    <Label text="* Required fields" 
           style="-fx-font-size: 11; -fx-text-fill: #7f8c8d; -fx-font-style: italic;">
        <VBox.margin>
            <Insets top="4"/>
        </VBox.margin>
    </Label>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <VBox.margin>
            <Insets top="8"/>
        </VBox.margin>
        
        <Button fx:id="btnCancel" 
                text="Cancel" 
                prefWidth="120" 
                prefHeight="45"
                onAction="#handleCancel"
                style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;"/>
        
        <Button fx:id="btnAddGroup" 
                text="Create Group" 
                prefWidth="140" 
                prefHeight="45"
                onAction="#handleAddGroup"
                style="-fx-background-color: #4A5CFF; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;"/>
    </HBox>

</VBox>