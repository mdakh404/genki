<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="50" minWidth="50" prefHeight="600" prefWidth="450" spacing="15" style="-fx-background-color: #f5f7fa; -fx-background-radius: 12;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="genki.controllers.AddGroupController">

    <padding>
        <Insets bottom="25" left="30" right="30" top="13" />
    </padding>

    <VBox spacing="2" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="15" left="25" right="25" top="15" />
        </padding>

        <VBox spacing="4">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Group Name *" />
            <TextField fx:id="txtGroupName" prefHeight="40" promptText="Enter group name" style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 10;" />
        </VBox>

        <VBox spacing="6">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Description *" />
            <TextArea fx:id="txtDescription" prefHeight="80" promptText="Enter group description" style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 1;" wrapText="true" />
        </VBox>

        <VBox spacing="6">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Group Type *" />
            <ComboBox fx:id="cmbGroupType" prefHeight="40" prefWidth="360" promptText="Select group type" style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-font-size: 14;">
            </ComboBox>
        </VBox>
        
        <VBox spacing="5">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Category" />
            <ComboBox fx:id="cmbCategory" prefHeight="40" prefWidth="360" promptText="Select category" style="-fx-background-radius: 8; -fx-border-color: black; -fx-border-radius: 8; -fx-font-size: 14;">
            </ComboBox>
        </VBox>

        <VBox spacing="4">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Privacy Settings" />
            <HBox spacing="20">
                <RadioButton fx:id="rbPublic" selected="true" style="-fx-font-size: 13;" text="Public" />
                <RadioButton fx:id="rbPrivate" style="-fx-font-size: 13;" text="Private" />
            </HBox>
        </VBox>

        <VBox spacing="4">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Permissions" />
            <VBox spacing="8" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
                <CheckBox fx:id="chkCanPost" selected="true" style="-fx-font-size: 12;" text="Members can post content" />
                <CheckBox fx:id="chkCanInvite" style="-fx-font-size: 12;" text="Members can invite others" />
                <CheckBox fx:id="chkCanEdit" style="-fx-font-size: 12;" text="Members can edit group info" />
            </VBox>
        </VBox>

    </VBox>

    <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="* Required fields">
        <VBox.margin>
            <Insets top="4" />
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER" spacing="15">
        <VBox.margin>
            <Insets top="8" />
        </VBox.margin>
        
        <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="45" prefWidth="120" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Cancel" />
        
        <Button fx:id="btnAddGroup" onAction="#handleAddGroup" prefHeight="45" prefWidth="140" style="-fx-background-color: #4A5CFF; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Create Group" />
    </HBox>

</VBox>