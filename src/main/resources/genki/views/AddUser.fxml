<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="300" prefWidth="450" spacing="15" style="-fx-background-color: #f5f7fa; -fx-background-radius: 12;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="genki.controllers.AddUserController">

    <padding>
        <Insets bottom="25" left="30" right="30" top="25" />
    </padding>

    <VBox spacing="18" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
        </padding>

        <VBox spacing="8">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Username *" />
            <TextField fx:id="txtUsername" focusTraversable="false" prefHeight="40" promptText="Enter username" style="-fx-background-radius: 8; -fx-border-color: #dce1e8; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 10;" />
        </VBox>

    </VBox>

    <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d; -fx-font-style: italic;" text="* Required fields">
        <VBox.margin>
            <Insets top="5" />
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER" spacing="15">
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>

        <Button fx:id="btnCancel" onAction="#handleCancel" prefHeight="45" prefWidth="120" style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Cancel" />

        <Button fx:id="btnAddUser" onAction="#handleAddUser" prefHeight="45" prefWidth="120" style="-fx-background-color: #4A5CFF; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" text="Add User" />
    </HBox>

</VBox>
