<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="800.0" prefWidth="1400.0">
    <HBox  style="-fx-background-color: #f3f4f6;">

        <VBox prefWidth="347.0" style="-fx-background-color: #1e2936;" spacing="0">

            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: #1e2936; -fx-padding: 16;">
                <Circle radius="20.0" fill="#4a9eff" />
                <VBox spacing="2.0" HBox.hgrow="ALWAYS">
                    <Label text="Alex Johnson" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    <Label text="Online" style="-fx-text-fill: #4ade80; -fx-font-size: 12px;" />
                </VBox>
                <Button fx:id="btnAddFriend" text="+"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px;" />


            </HBox>

            <HBox style="-fx-background-color: #1e2936; -fx-padding: 0 16 16 16;">
                <TextField fx:id="searchField" promptText="Search conversations..."
                           style="-fx-background-color: #2d3b4a; -fx-text-fill: white; -fx-prompt-text-fill: #6b7280; -fx-background-radius: 8; -fx-padding: 10;"
                           prefHeight="40.0" HBox.hgrow="ALWAYS" />
            </HBox>

            <HBox spacing="8.0" style="-fx-background-color: #1e2936; -fx-padding: 0 16 16 16;">
                <Button fx:id="btnAll" text="All" style="-fx-background-color: #4a5fff; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 16;" />
                <Button fx:id="btnUnread" text="Unread" style="-fx-background-color: transparent; -fx-text-fill: #9ca3af; -fx-background-radius: 20; -fx-padding: 8 16;" />
                <Button fx:id="btnGroups" text="Groups" style="-fx-background-color: transparent; -fx-text-fill: #9ca3af; -fx-background-radius: 20; -fx-padding: 8 16;" />
            </HBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: #1e2936; -fx-background: #1e2936;" VBox.vgrow="ALWAYS">
                <VBox fx:id="conversationListContainer" spacing="0" style="-fx-background-color: #1e2936;" />
            </ScrollPane>

        </VBox>


        <VBox style="-fx-background-color: #f3f4f6;" HBox.hgrow="ALWAYS">

            <HBox fx:id="chatHeader" alignment="CENTER_LEFT" spacing="12.0"
                  style="-fx-background-color: white; -fx-padding: 16; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0; -fx-cursor: hand;">
                <Circle radius="20.0" fill="#4a9eff" />
                <VBox spacing="2.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="chatContactName" text="Sarah Wilson" style="-fx-text-fill: #111827; -fx-font-size: 16px; -fx-font-weight: bold;" />
                    <HBox spacing="6.0" alignment="CENTER_LEFT">
                        <Circle fx:id="chatContactStatusCircle" radius="4.0" fill="#4ade80" />
                        <Label fx:id="chatContactStatus" text="Online" style="-fx-text-fill: #4ade80; -fx-font-size: 12px;" />
                    </HBox>
                </VBox>

            </HBox>

            <ScrollPane fitToWidth="true" fitToHeight="true"
                        style="-fx-background-color: #f3f4f6; -fx-background: #f3f4f6;"
                        VBox.vgrow="ALWAYS">
                <VBox fx:id="messagesContainer" spacing="16.0" style="-fx-background-color: #f3f4f6; -fx-padding: 20;" />
            </ScrollPane>


            <HBox alignment="CENTER" spacing="12.0"
                  style="-fx-background-color: white; -fx-padding: 16; -fx-border-color: #e5e7eb; -fx-border-width: 1 0 0 0;">



                <TextField fx:id="messageInput" promptText="Type a message..."
                           style="-fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-prompt-text-fill: #9ca3af; -fx-background-radius: 24; -fx-padding: 12 20; -fx-font-size: 14px;"
                           prefHeight="48.0" HBox.hgrow="ALWAYS" />


                <Button fx:id="btnSend" style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 24; -fx-padding: 12; -fx-cursor: hand; -fx-pref-width: 48; -fx-pref-height: 48;">
                    <graphic>
                        <Label text="âž¤" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                    </graphic>
                </Button>

            </HBox>

        </VBox>


        <VBox fx:id="rightSidePanel" prefWidth="320.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 0 1;">


            <VBox alignment="CENTER" spacing="12.0" style="-fx-padding: 32 24 24 24;">

                <Circle radius="50.0" fill="#4a9eff" />


                <Label fx:id="rightContactName" text="Sarah Wilson" style="-fx-text-fill: #111827; -fx-font-size: 20px; -fx-font-weight: bold;" />


                <Label fx:id="rightContactTitle" text="Product Designer" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" />


                <HBox spacing="6.0" alignment="CENTER">
                    <Circle radius="4.0" fill="#4ade80" />
                    <Label fx:id="rightContactStatus" text="Online" style="-fx-text-fill: #4ade80; -fx-font-size: 13px; -fx-font-weight: bold;" />
                </HBox>
            </VBox>

        </VBox>

    </HBox>

    <VBox
            visible="false" managed="false"
            style="-fx-background-color: rgba(0,0,0,0.5);">

        <VBox style="-fx-background-color: white; -fx-max-width: 600; -fx-max-height: 500; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"
              alignment="TOP_CENTER" spacing="0">


            <HBox spacing="12" alignment="CENTER_LEFT"
                  style="-fx-background-color: #f9fafb; -fx-padding: 16; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
                <Label text="ðŸ”" style="-fx-font-size: 20px;" />
                <TextField
                        promptText="Rechercher partout..."
                        style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 10 16; -fx-font-size: 14px;"
                        HBox.hgrow="ALWAYS" />

                <Button   style="-fx-background-color: transparent; -fx-text-fill: #6b7280; -fx-font-size: 18px;" />
            </HBox>


            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: white; -fx-background: white;">
                <VBox
                        spacing="0"
                        style="-fx-background-color: white;" />
            </ScrollPane>

        </VBox>
    </VBox>
</StackPane>
