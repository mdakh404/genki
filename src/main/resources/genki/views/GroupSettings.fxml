<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="500" prefHeight="500"
            style="-fx-background-color: #F9FAFB;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="genki.controllers.SettingsController">

    <VBox alignment="TOP_CENTER" spacing="15"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20">

        <VBox alignment="CENTER" spacing="12">
            <StackPane>
                <ImageView fx:id="groupImageView" fitWidth="110" fitHeight="110" preserveRatio="true"
                           style="-fx-background-color: #E5E7EB; -fx-background-radius: 90;">
                    <image>
                        <Image url="@../img/group-default.png"/>
                    </image>
                </ImageView>
            </StackPane>

            <Button fx:id="btnUploadGroupImage" text="Upload Image"
                    style="-fx-cursor: hand; -fx-background-color: #4B5563; -fx-text-fill: #F9FAFB;-fx-background-radius: 6;-fx-padding: 8 20;"/>
        </VBox>

        <VBox spacing="6" maxWidth="420">
            <Label text="Group Name" textFill="#374151"/>
            <TextField fx:id="groupNameField" promptText="Enter group name"
                       style="-fx-border-color: #9CA3AF;-fx-border-radius: 6;-fx-background-radius: 6;-fx-padding: 8;"/>
        </VBox>

        <VBox spacing="6" maxWidth="420">
            <Label text="Description" textFill="#374151"/>
            <TextArea fx:id="groupDescriptionField" prefHeight="140"
                      promptText="Describe the group..."
                      style="-fx-border-color: #9CA3AF;-fx-border-radius: 6;-fx-background-radius: 6;-fx-padding: 0.3;"/>
        </VBox>

        <VBox spacing="6" maxWidth="420">
            <Label text="Visibility" textFill="#374151"/>
            <HBox spacing="20">
                <RadioButton fx:id="publicRadio" text="Public" toggleGroup="$visibilityGroup"/>
                <RadioButton fx:id="privateRadio" text="Private" toggleGroup="$visibilityGroup"/>
            </HBox>
        </VBox>

        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="btnSaveGroup" text="Save Group" prefWidth="150" prefHeight="40"
                    style="-fx-cursor: hand; -fx-background-color: Green; -fx-text-fill: white;-fx-background-radius: 8;-fx-font-size: 14;-fx-font-weight: bold;"/>

            <Button fx:id="btnDeleteGroup" text="Delete Group" prefWidth="150" prefHeight="40"
                    style="-fx-cursor: hand; -fx-background-color: #DC2626;-fx-text-fill: #F9FAFB;-fx-background-radius: 8;-fx-font-size: 14;-fx-font-weight: bold;"/>
        </HBox>

    </VBox>

</AnchorPane>
