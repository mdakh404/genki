<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="TOP_CENTER" 
      prefHeight="350" 
      prefWidth="300" 
      spacing="15" 
      style="-fx-background-color: #f5f7fa; -fx-background-radius: 12;" 
      xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="genki.controllers.JoinGroupController">

    <padding>
        <Insets bottom="15" left="30" right="30" top="15" />
    </padding>

    <!-- Zone de recherche avec auto-complétion -->
    <VBox spacing="4" 
          style="-fx-background-color: #f5f7fa; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
        </padding>

        <VBox spacing="8">
            <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;" 
                   text="Group name *" />
            
            <!-- Container pour TextField + ListView superposés -->
            <StackPane>
                <VBox spacing="0">
                    <!-- TextField de recherche -->
                    <TextField fx:id="nameJoinGroup"
                               focusTraversable="false" 
                               prefHeight="40" 
                               promptText="Enter group name" 
                               style="-fx-background-radius: 8; -fx-border-color: #dce1e8; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 10;" />
                    
                    <!-- ListView des suggestions -->
                    <ListView fx:id="listSuggestions" 
                              visible="false" 
                              maxHeight="150"
                              prefHeight="150"
                              style="-fx-background-color: white; -fx-border-color: #dce1e8; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-background-radius: 8;">
                        <VBox.margin>
                            <Insets top="2" />
                        </VBox.margin>
                    </ListView>
                </VBox>
            </StackPane>
        </VBox>
    </VBox>

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="15">
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>

        <Button fx:id="btnCancel" 
                onAction="#handleCancel" 
                prefHeight="45" 
                prefWidth="120" 
                style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" 
                text="Cancel" />

        <Button fx:id="btnJoinGroup" 
                onAction="#handleJoinGroup" 
                prefHeight="45" 
                prefWidth="120" 
                style="-fx-background-color: #4A5CFF; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;" 
                text="Join Group" />
    </HBox>

</VBox>