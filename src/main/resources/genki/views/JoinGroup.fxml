<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox fx:id="rootContainer"
      alignment="TOP_CENTER"
      prefHeight="220"
      prefWidth="300"
      spacing="10"
      style="-fx-background-color: #f5f7fa; -fx-background-radius: 12;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="genki.controllers.JoinGroupController">

    <padding>
        <Insets bottom="15" left="20" right="20" top="15" />
    </padding>

    <!-- Zone de recherche avec auto-complétion -->
    <VBox spacing="5">
        <Label style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #34495e;"
               text="Group name *" />

        <!-- Container pour TextField + ListView superposés -->
        <StackPane>
            <VBox spacing="0">
                <!-- TextField de recherche -->
                <TextField fx:id="nameJoinGroup"
                           focusTraversable="false"
                           prefHeight="35"
                           maxHeight="35"
                           promptText="Enter group name"
                           style="-fx-background-radius: 8; -fx-border-color: #dce1e8; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-font-size: 14; -fx-padding: 8;" />

                <!-- ListView des suggestions -->
                <ListView fx:id="listSuggestions"
                          visible="false"
                          managed="false"
                          maxHeight="120"
                          minHeight="0"
                          prefHeight="120"
                          fixedCellSize="30"
                          style="-fx-background-color: white; -fx-border-color: #dce1e8; -fx-border-width: 1.5; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <VBox.margin>
                        <Insets top="2" />
                    </VBox.margin>
                </ListView>
            </VBox>
        </StackPane>
    </VBox>

    <!-- Boutons d'action -->
    <HBox alignment="CENTER" spacing="6">
        <padding>
            <Insets top="5" />
        </padding>

        <Button fx:id="btnCancel"
                onAction="#handleCancel"
                prefHeight="35"
                minWidth="100"
                style="-fx-background-color: #ecf0f1; -fx-text-fill: #34495e; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;"
                text="Cancel" />

        <Button fx:id="btnJoinGroup"
                onAction="#handleJoinGroup"
                prefHeight="35"
                minWidth="100"
                style="-fx-background-color: #4A5CFF; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold;"
                text="Join Group" />
    </HBox>

</VBox>